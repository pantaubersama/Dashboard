<div class="pb-wrapper">
  <%= render("components/sidebar") %>
  <main class="main" role="main">
    <header class="header" role="banner">
      <%= render("components/dropdown_profile") %>
    </header>
    <div class="main-content">
      <div class="top">
        <div class="btn-back">
          <%= link_to political_party_path(@party['id']) do %>
          <img src="<%= asset_pack_path("views/assets/images/ic_back.svg") %>"> Back
          <% end %>
        </div>
      </div>
      <div class="content">
        <span class="display-desc">
          <p>
          </p>
        </span>
        <%= render("components/flash_message") %>
        <div class="bg-white detail-profile">
          <div class="card">
            <span class="profile-image">
            </span>
            <div class="right-desc">
            </div>
          </div>
          <%= form_tag(political_party_path(@party['id']), method: :put) do %>
          <div class="card-form">
            <div class="form-wrap">
              <div class="form-group">
                <label for="">Nama</label>
                <%= text_field_tag :name, @party['name'], class: 'form-control', placeholder: 'Nama Partai' %>
              </div>
            </div>
            <div class="form-wrap">
              <div class="form-group">
                <label>Image</label>
                <%= file_field_tag :image, class: "form-control" %>
              </div>
            </div>
            <div class="form-wrap">
              <div class="form-group">
                <button class="btn btn-solid-green" type="submit"> Update</button>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
<%= render("components/footer") %>