<div class="d-flex main-wrapper">
  <%= render("components/sidebar") %>
  <div class="main-wrapper">
    <main class="main col-md-10 offset-md-2" role="main">
      <header class="header" role="banner">
        <%= render("components/dropdown_profile") %>
      </header>
      <div class="main-content">
        <div class="top">
          <div class="btn-back">
            <%= link_to request.referer do %>
              <img src="<%= asset_pack_path("views/assets/images/ic_back.svg") %>"> Back
            <% end %>
          </div>
        </div>
        <div class="content">
          <span class="display-desc">
            <p>
            </p>
          </span>
          <%= render("components/flash_message") %>
          <div class="bg-white detail-profile">
            <div class="card">
              <span class="profile-image">
                <%= image_tag @user['avatar']['medium_square']['url'] unless  @user['avatar']['medium_square']['url'].nil? %>
              </span>
              <div class="right-desc">
                <!--<p>Created at : 21/10/2023</p> -->
              </div>
            </div>
            <%= form_tag(user_update_path(@user['id']), method: :put) do %>
            <div class="card-form">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-wrap">
                    <label>Nama</label>
                    <div class="form-group">
                      <div class="form-group">
                        <%= text_field_tag :full_name, @user['full_name'], class: 'form-control', placeholder: 'Nama' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-wrap">
                    <label>Email</label>
                    <div class="form-group">
                      <div class="form-group">
                        <%= text_field_tag :email, @user['email'], class: 'form-control', placeholder: 'Email' %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-wrap">
                    <label>Username</label>
                    <div class="form-group">
                      <div class="form-group">
                        <%= text_field_tag :username, @user['username'], class: 'form-control', placeholder: 'Username' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-wrap">
                    <label>About</label>
                    <div class="form-group">
                      <div class="form-group">
                        <%= text_field_tag :about, @user['about'], class: 'form-control', placeholder: 'Tentang' %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-wrap">
                    <label>Location</label>
                    <div class="form-group">
                      <div class="form-group">
                        <%= text_field_tag :location, @user['location'], class: 'form-control', placeholder: 'location' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-wrap">
                    <label>Education</label>
                    <div class="form-group">
                      <div class="form-group">
                        <%= text_field_tag :education, @user['education'], class: 'form-control', placeholder: 'Education' %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-wrap">
                    <label>occupation</label>
                    <div class="form-group">
                      <div class="form-group">
                        <%= text_field_tag :occupation, @user['occupation'], class: 'form-control', placeholder: 'occupation' %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <button class="btn btn-solid-green" type="submit"> Update</button>
            </div>
            <% end %>
          </div>
        </div>
    </main>
  </div>
</div>
<%= render("components/footer") %>