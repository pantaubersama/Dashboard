<h1><%= method %></h1>
<%= simple_form_for(@cluster_detail, url: url, method: method, html: { multipart: true }) do |f| %>
  <%= f.input :image, as: :file, input_html: { name: 'image' } %>
  <%= f.input :name, input_html: { name: 'name' }  %>
  <%= f.input :category_id, collection: @categories.map{|aa| [aa["name"], aa["id"]] }, input_html: {name: 'category_id'} %>
  <%= f.input :description, input_html: { name: 'description' } %>
  <%= f.input :requester_id, collection: @user.map{|aa| [aa.full_name, aa.id] }, input_html: { name: 'requester_id' } %>
  <%= f.input :status, as: :hidden, input_html: { name: 'status' } %>
  <%= f.submit %>
<% end %>
