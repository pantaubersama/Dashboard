<%= form_tag(cluster_path(@detail), method: :put, multipart: true) do  %>
  <%= file_field_tag :image %>
  <%= label_tag :Name %>
  <%= text_field_tag :name, @detail["name"] %><br>
  <%= label_tag :Category %>
  <%= select_tag "category_id", options_for_select(@categories.map{|aa| [aa["name"], aa["id"]] }, @detail["category"]) %><br>
  <%= label_tag :Description %>
  <%= text_field_tag :description, @detail["description"] %><br>
  <%= label_tag :Admin %>
  <%= select_tag :requester_id, options_for_select(@user.map{|u| [u.full_name, u.id] }, @detail["requester"]["full_name"]) %><br>
  <%= hidden_field_tag :status, "requested" %><br>
  <%= submit_tag %>
<% end %>
