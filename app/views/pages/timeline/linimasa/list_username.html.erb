<div class="d-flex main-wrapper">
  <%= render("components/sidebar") %>
    <div class="main-wrapper">
			<main class="main col-md-10 offset-md-2" role="main">
				<%= render("components/linimasa/header", active: "user") %>
					<div class="tab-content clearfix">
						<div class="main-content tab-pane active" id="all">

						<div class="top ">
							<% link = pagy_link_proc(@pagy_users) %>
							<div class="pagination-wrap">
								<ul class="pagination">
									<% if @pagy_users.prev %>
										<li class="page-item">
											<%== link.call(@pagy_users.prev, pagy_t('pagy.nav.prev')) %>
										</li>
									<% else  %>
										<li class="page-item disabled">
											<%== link.call(@pagy_users.prev, pagy_t('pagy.nav.prev')) %>
										</li>
									<% end %>

									<% @pagy_users.series.each do |item| %>
										<% if item.is_a?(Integer) %>
											<li id="testtest" class="page-item"><%== link.call(item) %></li>
										<% elsif item.is_a?(String) %>
											<li class="page-item active" aria-current="page"><%== link.call(item) %></li>
										<% elsif item == :gap %>
											<li class="page-item disabled gap"><a href="#" class="page-link"><%== pagy_t('pagy.nav.gap') %></a></li>
										<% end %>
									<% end %>

									<% if @pagy_users.next %>
										<li class="page-item"><%== link.call(@pagy_users.next, pagy_t('pagy.nav.next')) %></li>
									<% else %>
										<li class="page-item disabled"><%== link.call(@pagy_users.next, pagy_t('pagy.nav.next')) %></li>
									<% end %>
								</ul>
							</div>
						</div>

						<div class="content">
							<span class="display-desc">
								<p>
		              <%= show_count_table(params[:page], @total_row_per_page, @total_user) %>
								</p>
							</span>
							<div class="table">
								<table>
									<thead>
									<tr>
										<th>No</th>
										<th>Team</th>
										<th>Username Twitter</th>
										<th>Jumlah Tweet</th>
										<th>Created at</th>
										<th></th>
									</tr>
									</thead>
									<tbody>
									<% @item_users.each_with_index do |item, index| %>
									<tr>
										<td class="number bold"><%= ((params[:page_user].present? ? params[:page_user].to_i : 1) - 1) * Pagy::VARS[:items].to_i + index + 1 %></td>
										<td class="name bold"><a href="<%= detail_user_path(item["id"]) %>"><%= item["team"]["title"] %></a></td>
										<td><%= item["keywords"] %></td>
										<td>100</td>
										<td><%= item["created_at_in_word"]["id"] %></td>
										<td>
											<button class="dropdown-toggle" type="button" data-toggle="dropdown"
															aria-haspopup="true" aria-expanded="false">
												<img src="<%= asset_pack_path("views/assets/images/ic_action.svg") %>">
											</button>
											<div class="dropdown-menu" aria-labelledby="action">
												<a class="dropdown-item" href="<%= detail_user_path(item["id"]) %>">Lihat</a>
												<%= link_to "Delete", delete_user_path(item["id"]), method: :delete, class: "dropdown-item" %>
											</div>
										</td>
									<% end %>
									</tbody>
								</table>
							</div>
						</div>

						</div>

					</div>
			</main>
    </div>
</div>
<%= render("components/footer") %>
