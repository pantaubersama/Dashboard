<div class="d-flex main-wrapper">
  <%= render("components/sidebar") %>
  <div class="main-wrapper">
    <main class="main col-md-10 offset-md-2" role="main">
      <%= render("components/header") %>
      <div class="tab-content clearfix">
        <div class="main-content tab-pane active" id="all">
          <div class="top ">
            
            <% link = pagy_link_proc(@pagy_politics) %>
              <div class="pagination-wrap">
                  <ul class="pagination">
                      <% if @pagy_politics.prev %>
                          <li class="page-item">
                              <%== link.call(@pagy_politics.prev, pagy_t('pagy.nav.prev')) %>
                          </li>
                      <% else  %>
                          <li class="page-item disabled">
                              <%== link.call(@pagy_politics.prev, pagy_t('pagy.nav.prev')) %>
                          </li>
                      <% end %>

                      <% @pagy_politics.series.each do |item| %>
                          <% if item.is_a?(Integer) %>
                              <li id="testtest" class="page-item"><%== link.call(item) %></li>
                          <% elsif item.is_a?(String) %>
                              <li class="page-item active" aria-current="page"><%== link.call(item) %></li>
                          <% elsif item == :gap %>
                              <li class="page-item disabled gap"><a href="#" class="page-link"><%== pagy_t('pagy.nav.gap') %></a></li>
                          <% end %>
                      <% end %>

                      <% if @pagy_politics.next %>
                          <li class="page-item"><%== link.call(@pagy_politics.next, pagy_t('pagy.nav.next')) %></li>
                      <% else %>
                          <li class="page-item disabled"><%== link.call(@pagy_politics.next, pagy_t('pagy.nav.next')) %></li>
                      <% end %>
                  </ul>
              </div>

          </div>
          <div class="content">
                        <span class="display-desc">
                          <p>
                              Displaying Content 1 - 100 of <%= @total_records %> in total
                          </p>
                        </span>
            <div class="table">
              <table>
                <thead>
                <tr>
                  <th>No</th>
                  <th>Nama</th>
                  <th>Judul</th>
                  <th>Cluster</th>
                  <th>Create At</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                <% @item_politics.each_with_index do |item, index| %>
                <tr>
                  <td class="number bold"><%= (@number.to_i - 1) * 30 + index+1 %></td>
                  <td class="name bold"><a href="detail-janji-politik.html"> <img src="<%= item["creator"]["avatar"]["thumbnail"]["url"] %>"><%= item["creator"]["full_name"] %></a>
                  </td>
                  <td><%= item["title"].truncate(30) %></td>
                  <td><%= item.["creator"]["cluster"]["name"] %></td>
                  <td><%= item["created_at_in_word"]["id"] %></td>
                  <td>
                    <button class="dropdown-toggle" type="button" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                      <img src="<%= asset_pack_path("views/assets/images/ic_action.svg") %>">
                    </button>
                    <div class="dropdown-menu" aria-labelledby="action">
                      <a id="testing2" class="dropdown-item" href="<%= politic_path(item["id"]) %>">Lihat</a>
                      <a id="testing2" class="dropdown-item" href="<%= edit_politic_path(item["id"]) %>">Edit</a>
                      <%= link_to "Delete", politic_path(item["id"]), method: :delete, class: "dropdown-item" %>
                    </div>
                  </td>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="filter">
              <a class="btn " data-toggle="collapse" href="#filter" role="button" aria-expanded="false"
                 aria-controls="collapseExample">
                <img src="<%= asset_pack_path("views/assets/images/ic_arrow-left.svg") %>">
                <img src="<%= asset_pack_path("views/assets/images/ic_filter.svg") %>">
              </a>
              <div id="filter" class="collapse filter-form">
                <div class="card card-body">
                  <h4>Filter</h4>
                  <div class="form-wrap">
                    <label>Status</label>
                    <div class="form-group">
                      <select class="form-control">
                        <option>Terverifikasi</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-wrap">
                    <label>User</label>
                    <div class="form-group">
                      <div class="form-group">
                        <input type="nama" class="form-control" placeholder="Nama">
                      </div>
                    </div>
                  </div>
                </div>
                <div class="form-wrap">
                  <label>Email</label>
                  <div class="form-group">
                    <div class="form-group">
                      <input type="email" class="form-control" placeholder="luna@gmail.com">
                    </div>
                  </div>
                </div>
                <div class="form-wrap">
                  <label>Cluster</label>
                  <div class="form-group">
                    <div class="form-group">
                      <input type="cluster" class="form-control" placeholder="Nama Cluster">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="main-content tab-pane" id="trash">
          <div class="top ">
              
          <% link = pagy_link_proc(@pagy_trash) %>
            <div class="pagination-wrap">
                <ul class="pagination">
                    <% if @pagy_trash.prev %>
                        <li class="page-item">
                            <%== link.call(@pagy_trash.prev, pagy_t('pagy.nav.prev')) %>
                        </li>
                    <% else  %>
                        <li class="page-item disabled">
                            <%== link.call(@pagy_trash.prev, pagy_t('pagy.nav.prev')) %>
                        </li>
                    <% end %>

                    <% @pagy_trash.series.each do |item| %>
                        <% if item.is_a?(Integer) %>
                            <li id="testtest" class="page-item"><%== link.call(item) %></li>
                        <% elsif item.is_a?(String) %>
                            <li class="page-item active" aria-current="page"><%== link.call(item) %></li>
                        <% elsif item == :gap %>
                            <li class="page-item disabled gap"><a href="#" class="page-link"><%== pagy_t('pagy.nav.gap') %></a></li>
                        <% end %>
                    <% end %>

                    <% if @pagy_trash.next %>
                        <li class="page-item"><%== link.call(@pagy_trash.next, pagy_t('pagy.nav.next')) %></li>
                    <% else %>
                        <li class="page-item disabled"><%== link.call(@pagy_trash.next, pagy_t('pagy.nav.next')) %></li>
                    <% end %>
                </ul>
            </div>
          </div>
          <div class="content">
            <span class="display-desc">
              <p>
                  Displaying Content 1 - 100 of <%= @total_trash %> in total
              </p>
            </span>
            <div class="table">
              <table>
                <thead>
                <tr>
                  <th>No</th>
                  <th>Nama</th>
                  <th>Judul</th>
                  <th>Cluster</th>
                  <th>Create At</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                <% @item_trash.each_with_index do |item, index| %>
                  <tr>
                    <td class="number bold"><%= (@number_trash.to_i - 1) * 30 + index+1 %></td>
                    <td class="name bold"><a href="detail-janji-politik.html"> <img src="<%= item["creator"]["avatar"]["thumbnail"]["url"] %>"><%= item["creator"]["full_name"] %></a>
                    </td>
                    <td><%= item["title"].truncate(30) %></td>
                    <td><%= item["creator"]["cluster"]["name"] %></td>
                    <td><%= item["created_at_in_word"]["id"] %></td>
                    <td>
                      <button class="dropdown-toggle" type="button" data-toggle="dropdown"
                              aria-haspopup="true" aria-expanded="false">
                        <img src="<%= asset_pack_path("views/assets/images/ic_action.svg") %>">
                      </button>
                      <div class="dropdown-menu" aria-labelledby="action">
                        <a class="dropdown-item" href="<%= detail_politic_trash_path(item["id"]) %>">Lihat</a>
                      </div>
                    </td>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="filter">
              <a class="btn " data-toggle="collapse" href="#filter" role="button" aria-expanded="false"
                 aria-controls="collapseExample">
                <img src="<%= asset_pack_path("views/assets/images/ic_arrow-left.svg") %>">
                <img src="<%= asset_pack_path("views/assets/images/ic_filter.svg") %>">
              </a>
              <div class="collapse filter-form">
                <div class="card card-body">
                  <h4>Filter</h4>
                  <div class="form-wrap">
                    <label>Status</label>
                    <div class="form-group">
                      <select class="form-control">
                        <option>Terverifikasi</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-wrap">
                    <label>User</label>
                    <div class="form-group">
                      <div class="form-group">
                        <input type="nama" class="form-control" placeholder="Nama">
                      </div>
                    </div>
                  </div>
                </div>
                <div class="form-wrap">
                  <label>Email</label>
                  <div class="form-group">
                    <div class="form-group">
                      <input type="email" class="form-control" placeholder="luna@gmail.com">
                    </div>
                  </div>
                </div>
                <div class="form-wrap">
                  <label>Cluster</label>
                  <div class="form-group">
                    <div class="form-group">
                      <input type="cluster" class="form-control" placeholder="Nama Cluster">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
<%= render("components/footer") %>
