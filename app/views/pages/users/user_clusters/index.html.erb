<div class="d-flex main-wrapper">
  <%= render("components/sidebar") %>
  <div class="main-wrapper">
    <main class="main col-md-10 offset-md-2" role="main">
      <%= render("components/header") %>
      <div class="tab-content clearfix">
        <div class="main-content tab-pane active" id="all">
          <div class="top ">
            
            <% link = pagy_link_proc(@pagy_users) %>
              <div class="pagination-wrap">
                  <ul class="pagination">
                      <% if @pagy_users.prev %>
                          <li class="page-item">
                              <%== link.call(@pagy_users.prev, pagy_t('pagy.nav.prev')) %>
                          </li>
                      <% else  %>
                          <li class="page-item disabled">
                              <%== link.call(@pagy_users.prev, pagy_t('pagy.nav.prev')) %>
                          </li>
                      <% end %>

                      <% @pagy_users.series.each do |item| %>
                          <% if item.is_a?(Integer) %>
                              <li id="testtest" class="page-item"><%== link.call(item) %></li>
                          <% elsif item.is_a?(String) %>
                              <li class="page-item active" aria-current="page"><%== link.call(item) %></li>
                          <% elsif item == :gap %>
                              <li class="page-item disabled gap"><a href="#" class="page-link"><%== pagy_t('pagy.nav.gap') %></a></li>
                          <% end %>
                      <% end %>

                      <% if @pagy_users.next %>
                          <li class="page-item"><%== link.call(@pagy_users.next, pagy_t('pagy.nav.next')) %></li>
                      <% else %>
                          <li class="page-item disabled"><%== link.call(@pagy_users.next, pagy_t('pagy.nav.next')) %></li>
                      <% end %>
                  </ul>
              </div>

          </div>
          <div class="content">
                        <span class="display-desc">
                          <p>
                              Displaying Content 1 - 100 of <%= @total_records %> in total
                          </p>
                        </span>
            <div class="table">
              <table>
                <thead>
                <tr>
                  <th>No</th>
                  <th>Nama</th>
                  <th>Cluster</th>
                  <th>Email</th>
                  <th>Status</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                <% @user_clusters.each_with_index do |user, index| %>
                  <tr>
                    <td class="number bold"><%= (@number.to_i - 1) * 30 + index+1 %></td>
                    <td class="name bold">
                      <%= link_to  user_show_path(user['id']) do %>
                        <%= image_tag user['avatar']['medium_square']['url'] unless user['avatar']['medium_square']['url'].nil? %>
                        <%= user['full_name'] %>
                      <% end %>
                    </td>
                    <td>
                      <%= user['cluster']['name'] %>
                    </td>
                    <td>
                      <%= user['email'] %>
                    </td>
                    <td class="image">
                      <% if user['verified'] %>
                      <img src="<%= asset_pack_path("views/assets/images/ic_status.svg") %>"/>
                      <% end %>
                    </td>
                    <td>
                      <button class="dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false">
                        <img src="<%= asset_pack_path("views/assets/images/ic_action.svg") %>">
                      </button>
                      <div class="dropdown-menu" aria-labelledby="action">
                        <%= link_to 'Lihat', user_show_path(user['id']), class: 'dropdown-item' %>
                        <%= link_to 'Reject', reject_verification_path(user['id']), class: 'dropdown-item' %>
                      </div>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
            <div class="filter">
              <a class="btn " data-toggle="collapse" href="#filter" role="button" aria-expanded="false"
                 aria-controls="collapseExample">
                <img src="<%= asset_pack_path("views/assets/images/ic_arrow-left.svg") %>">
                <img src="<%= asset_pack_path("views/assets/images/ic_filter.svg") %>">
              </a>
              <div id="filter" class="collapse filter-form">
                <div class="card card-body">
                  <h4>Filter</h4>
                  <div class="form-wrap">
                    <label>Status</label>
                    <div class="form-group">
                      <select class="form-control">
                        <option>Terverifikasi</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-wrap">
                    <label>User</label>
                    <div class="form-group">
                      <div class="form-group">
                        <input type="nama" class="form-control" placeholder="Nama">
                      </div>
                    </div>
                  </div>
                </div>
                <div class="form-wrap">
                  <label>Email</label>
                  <div class="form-group">
                    <div class="form-group">
                      <input type="email" class="form-control" placeholder="luna@gmail.com">
                    </div>
                  </div>
                </div>
                <div class="form-wrap">
                  <label>Cluster</label>
                  <div class="form-group">
                    <div class="form-group">
                      <input type="cluster" class="form-control" placeholder="Nama Cluster">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>


      </div>
    </main>
  </div>
</div>
<%= render("components/footer") %>
