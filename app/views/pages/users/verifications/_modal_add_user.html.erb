<div class="modal-wrap">
  <button type="button" class="btn btn-green" data-toggle="modal" data-target="#add_user_verification_ditolak">
    Tambah User Verification <img src="<%= asset_pack_path("views/assets/images/ic_create-admin.svg") %>"
    alt="add">
  </button>

  <div class="modal fade" id="add_user_verification_ditolak" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h3>Tambah User Verification</h3>
          <div class="row">
          <%= form_tag(user_verifications_path, method: :post) do %>
            <div class="col-md-6 col-sm-12">
              <div class="form-wrap">
                <label>Email</label>
                <div class="form-group">
                  <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder="Email" required>
                  </div>
                </div>
              </div>

              <div class="form-wrap">
                <label>Foto Wajah Beserta KTP</label>
                <div class="form-group">
                  <input type="file" name="ktp_selfie" accept="image/*">
                </div>
              </div>

              <div class="form-wrap">
                <label>KTP</label>
                <div class="form-group">
                  <input type="file" name="ktp_photo" accept="image/*">
                </div>
              </div>

            </div>
            <div class="col-md-6 col-sm-12">
              <div class="form-wrap">
                <label>No. KTP</label>
                <div class="form-group">
                  <div class="form-group">
                    <input type="text" name="ktp_number" class="form-control" placeholder="No KTP">
                  </div>
                </div>
              </div>

              <div class="form-wrap">
                <label>TTD</label>
                <div class="form-group">
                  <input type="file" name="signature" accept="image/*">
                </div>
              </div>

            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-solid-green">Create</button>
          <button type="button" class="btn btn-transparent" data-dismiss="modal">Cancel</button>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>