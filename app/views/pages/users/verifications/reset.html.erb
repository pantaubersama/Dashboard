<div class="pb-wrapper">
  <%= render("components/sidebar") %>
  <main class="main" role="main">
    <header class="header" role="banner">
      <%= render("components/dropdown_profile") %>
    </header>
    <div class="main-content">
      <div class="top">
        <div class="btn-back">
          <%= link_to user_verifications_path do %>
          <img src="<%= asset_pack_path("views/assets/images/ic_back.svg") %>"> Back
          <% end %>
        </div>
      </div>
      <div class="content">
        <span class="display-desc">
          <p>
          </p>
        </span>
        <div class="bg-white detail-profile">
          <div class="card">
            <span class="profile-image">
            </span>
            <div class="right-desc">

            </div>
          </div>
          <div class="card-form">
            <div class="row">
              <div class="col-md-12">
                <%= form_tag(reset_action_user_verifications_path(params[:id]), method: :post) do  %>
                  <div class="form-wrap">
                    <div class="form-group">
                      <p>Name : <%= @verification["user"]["full_name"] %></p>
                      <p>Email : <%= @verification["user"]["email"] %></p>
                      <p>Step : <%= @verification["step"] %></p>
                    </div>
                  </div>
                  <div class="form-wrap">
                    <label>Catatan</label>
                    <div class="form-group">
                      <div class="form-group">
                        <textarea name="description" class="form-control with-toolbar"><%== @verification["note"] %></textarea>
                      </div>
                    </div>
                  </div>
                  <div class="form-wrap">
                    <label>Reset ke step</label>
                    <div class="form-group">
                      <select name="step">
                        <option value=""></option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-wrap">
                    <button type="submit" class="btn btn-solid-green">UBAH</button>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </main>
</div>
<%= render("components/footer") %>