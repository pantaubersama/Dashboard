<div class="d-flex main-wrapper">
  <%= render("components/sidebar") %>
  <div class="main-wrapper">
    <main class="main col-md-10 offset-md-2" role="main">
      <header class="header" role="banner">
        <div class="tabs">  
                <ul  class="nav nav-pills">
                    <li class="active"><a  href="#tertunda" data-toggle="tab">Tertunda</a>
                    </li>
                    <li><a href="#diterima" data-toggle="tab">Diterima</a>
                    </li>
                    <li><a href="#ditolak" data-toggle="tab">Ditolak</a>
                    </li>
                </ul>
        </div>

        <div class="dropdown profile">
          <button class="dropdown-toggle" type="button" id="profile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <img src="<%= asset_pack_path("views/assets/images/profile.jpg") %>">
              <div class="desc">
                <h5>Lilian Chu</h5>
                <p>Admin</p>
              </div>
              <span class="icon">
                  <img src="<%= asset_pack_path("views/assets/images/ic_expand.svg") %>">
              </span>
          </button>
          <div class="dropdown-menu" aria-labelledby="profile">
            <a class="dropdown-item" href="#">Profile</a>
            <a class="dropdown-item" href="#">Setting</a>
          </div>
        </div>
      </header>
        <div class="tab-content clearfix">
          <div class="main-content">
                    <div class="top">
                        <div class="btn-back">
                            <a href="list_user_verification">
                                    <img src="<%= asset_pack_path("views/assets/images/ic_back.svg") %>"> Back
                            </a>
                        </div>
                    </div>
                    <div class="content">
                        <span class="display-desc">
                          <p>
                              <!-- Displaying Content 1 - 30 of 500 in total -->
                          </p>
                        </span>
                      <div class="bg-white detail-profile">
                        <div class="card">
                            <span class="profile-image">
                            </span>
                            <div class="right-desc">
                                <p>Created at : 21/10/2023</p>
                                <button class="btn btn-green">DITOLAK</button>
                                <button class="btn btn-solid-green">DITERIMA</button>
                            </div>
                        </div>

                        <div class="card-form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-wrap">
                                        <label>Email</label>
                                        <div class="form-group">
                                            <div class="form-group">
                                                <input type="Email" class="form-control" placeholder="Email">
                                              </div>
                                          </div>
                                    </div>
                                    
                                    <div class="form-wrap">
                                        <label>Foto Wajah Beserta KTP</label>
                                        <div class="form-group">
                                            <img src="<%= asset_pack_path("views/assets/images/profile.jpg") %>">
                                        </div>
                                    </div>
                                                                        
                                    <div class="row">
                                        <div class="col-sm-6 col-xs-12">                       
                                            <div class="form-wrap">
                                                <label>KTP</label>
                                                <div class="modal-wrap">
                                                  <button type="button" class="btn btn-green" data-toggle="modal" data-target="#exampleModal">
                                                    <img src="<%= asset_pack_path("views/assets/images/profile.jpg") %>">
                                                    </button>
                                                    
                                                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                      <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                          <div class="modal-header">
                                                            <!-- <h5 class="modal-title" id="exampleModalLabel">Tambah Admin</h5> -->
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                              <span aria-hidden="true">&times;</span>
                                                            </button>
                                                          </div>
                                                          <div class="modal-body">
                                                                <img src="<%= asset_pack_path("views/assets/images/profile.jpg") %>">
                                                          </div>
                                                        </div>
                                                      </div>
                                                    </div>
                                                </div>
                                                
                                            </div>
                                        </div>

                                        <div class="col-sm-6 col-xs-12"> 
                                                <div class="form-wrap">
                                                    <label>Tanda Tangan</label>
                                                    <div class="form-group">
                                                        <img src="<%= asset_pack_path("views/assets/images/profile.jpg") %>">
                                                    </div>
                                                </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="form-wrap">
                                        <label>No KTP</label>
                                        <div class="form-group">
                                            <div class="form-group">
                                                <input type="Kategori" class="form-control" placeholder="Pendidikan">
                                              </div>
                                          </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                      </div>
                      </div>
                    </div>
                  </div>
        </div>
    </main>
</div>
</div>
<%= render("components/footer") %>