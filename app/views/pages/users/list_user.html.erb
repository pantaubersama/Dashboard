          <div class="table">
            <table>
              <thead>
              <tr>
                <th>No</th>
                <th>Nama</th>
                <%# <th>Cluster</th> %>
                <th>Email</th>
                <th>Status</th>
                <th>Create At</th>
                <th></th>
              </tr>
              </thead>
              <tbody>


              <% @users.each_with_index do |user, index| %>
              <tr>
                <td class="number bold"><%= index+1 %></td>
                <td class="name bold">
                  <a href="detail-user.html">
                  <%= image_tag ENV['AUTH_PANTAU_BASE_URL']+"/uploads/user/avatar/"+user.id+"/thumbnail_square_"+user.avatar %>
                  <%= user.fullname %></a>
                </td>
                <%# <td>PPP</td> %>
                <td><%= user.email %></td>
                <td class="image">

                  <% if user.status == 1 %>
                    <img src="<%= asset_pack_path("views/assets/images/ic_status.svg") %>">
                  <% elsif user.status == 0 %>
                    Requested
                  <% elsif user.status == 2 %>
                    Rejected
                  <% end %>

                </td>
                <td><%= user.created_at %></td>
                <td>
                  <button class="dropdown-toggle" type="button" data-toggle="dropdown"
                          aria-haspopup="true" aria-expanded="false">
                    <img src="<%= asset_pack_path("views/assets/images/ic_action.svg") %>">
                  </button>
                  <div class="dropdown-menu" aria-labelledby="action">
                    <%= link_to 'Lihat', user_show_path(user), class: 'dropdown-item' %>
                  </div>
                </td>
              </tr>
              <% end %>


              </tbody>
            </table>
