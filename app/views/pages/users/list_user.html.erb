        <div class="content">
        <span class="display-desc">
          <p>
              Displaying Content 1 - <%= @item_users.count %> of <%= @users.count %> in total
          </p>
        </span>
          <div class="col-md-12">
            <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>">
              <%= value %>
            </div>
            <% end %>
          </div>
          <span class="display-desc">
            <p>
            </p>
          </span>

          <div class="table">
            <table>
              <thead>
                <tr>
                  <th>No</th>
                  <th>Nama</th>
                  <th>Cluster</th>
                  <th>Email</th>
                  <th>Status</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>


                <% @users.each_with_index do |user, index| %>
                <tr>
                  <td class="number bold">
                    <%= index+1 %>
                  </td>
                  <td class="name bold">
                    <a href="detail-user.html">
                      <%= image_tag user['avatar']['medium_square']['url'] unless user['avatar']['medium_square']['url'].nil? %>
                      <%= user['full_name'] %></a>
                  </td>
                  <td>
                    <%= user['cluster']['name'] %>
                  </td>
                  <td>
                    <%= user['email'] %>
                  </td>
                  <td class="image">
                    <% if user['verified'] %>
                    <img src="<%= asset_pack_path("views/assets/images/ic_status.svg") %>"/>
                    <% end %>
                    <%= user['verified'] %>
                  </td>
                  <td>
                    <button class="dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true"
                      aria-expanded="false">
                      <img src="<%= asset_pack_path("views/assets/images/ic_action.svg") %>">
                    </button>
                    <div class="dropdown-menu" aria-labelledby="action">
                      <%= link_to 'Lihat', user_show_path(user['id']), class: 'dropdown-item' %>
                      <%= link_to 'Reject', reject_verification_path(user['id']), class: 'dropdown-item' %>
                    </div>
                  </td>
                </tr>
                <% end %>


              </tbody>
            </table>


          </div>

          <div class="row">
            <div class="col-md-6">
              <label for="">Verifikasi</label>
              <%= form_tag(approve_verification_path, method: "post") do %>
              <div class="form-group">
                <div class="form-group">
                  <input type="email" class="form-control" placeholder="adellapratitas7@gmail.com" name="email">
                </div>
              </div>
              <button type="submit" class="btn btn-solid-green">Approve
              </button>
              <% end %>
            </div>
          </div>
          <div class="filter">
            <a class="btn " data-toggle="collapse" href="#filter" role="button" aria-expanded="false" aria-controls="collapseExample">
              <img src="<%= asset_pack_path("views/assets/images/ic_arrow-left.svg") %>">
              <img src="<%= asset_pack_path("views/assets/images/ic_filter.svg") %>">
            </a>
            <div class="collapse filter-form">
              <div class="card card-body">
                <h4>Filter</h4>
                <div class="form-wrap">
                  <label>Status</label>
                  <div class="form-group">
                    <select class="form-control">
                      <option>Terverifikasi</option>
                      <option>2</option>
                      <option>3</option>
                      <option>4</option>
                      <option>5</option>
                    </select>
                  </div>
                </div>
                <div class="form-wrap">
                  <label>User</label>
                  <div class="form-group">
                    <div class="form-group">
                      <input type="nama" class="form-control" placeholder="Nama">
                    </div>
                  </div>
                </div>
              </div>
              <div class="form-wrap">
                <label>Email</label>
                <div class="form-group">
                  <div class="form-group">
                    <input type="email" class="form-control" placeholder="luna@gmail.com">
                  </div>
                </div>
              </div>
              <div class="form-wrap">
                <label>Cluster</label>
                <div class="form-group">
                  <div class="form-group">
                    <input type="cluster" class="form-control" placeholder="Nama Cluster">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
