<div class="d-flex main-wrapper">
  <%= render("components/sidebar") %>
  <div class="main-wrapper">
    <main class="main col-md-10 offset-md-2" role="main">
      <header class="header" role="banner">
        <%= render("components/dropdown_profile") %>
      </header>
      <div class="main-content">
        <div class="top">
          <% link = pagy_link_proc(@pagy_banners) %>
          <div class="pagination-wrap">
            <ul class="pagination">
              <% if @pagy_banners.prev %>
              <li class="page-item">
                <%== link.call(@pagy_banners.prev, pagy_t('pagy.nav.prev')) %>
              </li>
              <% else  %>
              <li class="page-item disabled">
                <%== link.call(@pagy_banners.prev, pagy_t('pagy.nav.prev')) %>
              </li>
              <% end %>

              <% @pagy_banners.series.each do |item| %>
              <% if item.is_a?(Integer) %>
              <li id="testtest" class="page-item">
                <%== link.call(item) %>
              </li>
              <% elsif item.is_a?(String) %>
              <li class="page-item active" aria-current="page">
                <%== link.call(item) %>
              </li>
              <% elsif item == :gap %>
              <li class="page-item disabled gap"><a href="#" class="page-link">
                  <%== pagy_t('pagy.nav.gap') %></a></li>
              <% end %>
              <% end %>

              <% if @pagy_banners.next %>
              <li class="page-item">
                <%== link.call(@pagy_banners.next, pagy_t('pagy.nav.next')) %>
              </li>
              <% else %>
              <li class="page-item disabled">
                <%== link.call(@pagy_banners.next, pagy_t('pagy.nav.next')) %>
              </li>
              <% end %>
            </ul>
          </div>
          <div class="modal-wrap">
            <button type="button" class="btn btn-green" data-toggle="modal" data-target="#exampleModal">
                Create Banner <img src="assets/img/ic_create-admin.svg" alt="add">
              </button>
                  
              <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <!-- <h5 class="modal-title" id="exampleModalLabel">Tambah Admin</h5> -->
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <h3>Tambah Banner</h3>
                      <div class="row">
                          <div class="col-md-6 col-xs-12">
  
                                <div class="form-wrap">
                                  <label>Deskripsi</label>
                                  <div class="form-group"> 
                                      <div class="form-group">
                                          <textarea type="Email" class="form-control with-toolbar" placeholder="adellapratitas7@gmail.com"></textarea>
                                          <div class="toolbar-text full">
                                              <ul>
                                                  <li><span class="icon"><img src="<%= asset_pack_path("views/assets/images/ic_bold.svg") %>"></span></li>
                                                  <li><span class="icon"><img src="<%= asset_pack_path("views/assets/images/ic_italic.svg") %>"></span></li>
                                                  <li><span class="icon"><img src="<%= asset_pack_path("views/assets/images/ic_underline.svg") %>"></span></li>
                                                  <li><span class="icon"><img src="<%= asset_pack_path("views/assets/images/ic_align-left.svg") %>"></span></li>
                                                  <li><span class="icon"><img src="<%= asset_pack_path("views/assets/images/ic_align-center.svg") %>"></span></li>
                                                  <li><span class="icon"><img src="<%= asset_pack_path("views/assets/images/ic_align-right.svg") %>"></span></li>
                                                  <li><span class="icon"><img src="<%= asset_pack_path("views/assets/images/ic_justify.svg") %>"></span></li>
                                                  <li><span class="icon"><img src="<%= asset_pack_path("views/assets/images/ic_bulet.svg") %>"></span></li>
                                                  <li><span class="icon"><img src="<%= asset_pack_path("views/assets/images/ic_numbering.svg") %>"></span></li>
                                                  <li><span class="icon"><img src="<%= asset_pack_path("views/assets/images/ic_left.svg") %>"></span></li>
                                                  <li><span class="icon"><img src="<%= asset_pack_path("views/assets/images/ic_right.svg") %>"></span></li>
                                                  <li><span class="icon"><img src="<%= asset_pack_path("views/assets/images/ic_link-t.svg") %>"></span></li>
                                              </ul>
                                          </div>
                                        </div>
                                    </div>
                                </div>

                          </div>

                      </div>

                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-solid-green" data-dismiss="modal">Tambah</button>
                      <button type="button" class="btn btn-transparent">Cancel</button>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
        <div class="content">
          <span class="display-desc">
            <p>
              Displaying Content 1 - <%= @item_banners.count %> of <%= @banners.count %> in total
            </p>
          </span>

          <div class="card-wrap">
            <div class="container">
              <div class="row">
                <% @banners.each do |banner| %>
                  <%= link_to banner_path(banner)  do %>
                  <div class="col-sm-4">
                    <div class="card">
                      <span class="image">
                        <%= image_tag banner.header_image_url unless banner.header_image_url.nil? %>
                      </span>
                      <h4>
                        <%= banner.title %>
                      </h4>
                    </div>
                  </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>

          <div class="filter">
            <a class="btn " data-toggle="collapse" href="#filter" role="button" aria-expanded="false" aria-controls="collapseExample">
              <img src="<%= asset_pack_path("views/assets/images/ic_arrow-left.svg") %>">
              <img src="<%= asset_pack_path("views/assets/images/ic_filter.svg") %>">
            </a>
            <div id="filter" class="collapse filter-form">
              <div class="card card-body">
                <h4>Filter</h4>
                  <%= form_tag(banner_index_path, method: :get) do %>
                  <div class="form-wrap">
                    <label>Nama Banner</label>
                    <div class="form-group">
                      <div class="form-group">
                        <%= text_field_tag :nama, "", class: 'form-control', placeholder: 'Nama Banner' %>
                      </div>
                    </div>
                  </div>
                <button> Done</button>
                <button data-toggle="collapse" href="#filter" role="button" aria-expanded="false" aria-controls="collapseExample"> Cancel</button>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
<%= render("components/footer") %>