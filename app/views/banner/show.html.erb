<div class="pb-wrapper">
  <%= render("components/sidebar") %>
  <main class="main" role="main">
    <header class="header" role="banner">
      <%= render("components/dropdown_profile") %>
    </header>
    <div class="main-content">
      <div class="top">
        <div class="btn-back">
          <%= link_to banner_index_path do %>
            <img src="<%= asset_pack_path("views/assets/images/ic_back.svg") %>"> Back
          <% end %>
        </div>
      </div>
      <div class="content">
        <span class="display-desc">
          <p>
              <!-- Displaying Content 1 - 30 of 500 in total -->
          </p>
        </span>
        <div class="bg-white detail-profile">
          <div class="card">
            <span class="profile-image">
              <label>Ilustrasi</label>
              <%= image_tag  @banner.header_image_url unless  @banner.header_image_url.nil?  %>
            </span>
            <div class="right-desc">
              <p>Created at :
                <%= @banner.created_at %>
              </p>
              <%= button_to 'Edit', edit_banner_path(@banner), method: :get, class: 'btn btn-solid-green' %>
            </div>
          </div>

          <div class="card-form">
            <div class="row">
              <div class="col-md-6">
                <div class="form-wrap">
                  <label>Nama Banner</label>
                  <div class="form-group">
                    <div class="form-group">
                      <input type="Email" class="form-control" placeholder="<%= @banner.title %>">
                    </div>
                  </div>
                </div>
                <div class="form-wrap">
                  <label>Deskripsi</label>
                  <div class="form-group">
                    <div class="form-group">
                      <Textarea type="Deskripsi" class="form-control" placeholder=""><%= @banner.body %></Textarea>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
<%= render("components/footer") %>