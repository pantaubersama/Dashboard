<div class="d-flex main-wrapper">
  <%= render("components/sidebar") %>
  <div class="main-wrapper">
    <main class="main col-md-10 offset-md-2" role="main">
      <%= render "components/question/header", active: "all" %>
      
      <div class="tab-content clearfix">
        <div class="main-content tab-pane active" id="list-pertanyaan">
          <div class="top ">
            <% link = pagy_link_proc(@pagy) %>
            <div class="pagination-wrap">
              <ul class="pagination">
                <% if @pagy.prev %>
                <li class="page-item">
                  <%== link.call(@pagy.prev, pagy_t('pagy.nav.prev')) %>
                </li>
                <% else  %>
                <li class="page-item disabled">
                  <%== link.call(@pagy.prev, pagy_t('pagy.nav.prev')) %>
                </li>
                <% end %>

                <% @pagy.series.each do |item| %>
                <% if item.is_a?(Integer) %>
                <li id="testtest" class="page-item">
                  <%== link.call(item) %>
                </li>
                <% elsif item.is_a?(String) %>
                <li class="page-item active" aria-current="page">
                  <%== link.call(item) %>
                </li>
                <% elsif item == :gap %>
                <li class="page-item disabled gap"><a href="#" class="page-link">
                    <%== pagy_t('pagy.nav.gap') %></a></li>
                <% end %>
                <% end %>

                <% if @pagy.next %>
                <li class="page-item">
                  <%== link.call(@pagy.next, pagy_t('pagy.nav.next')) %>
                </li>
                <% else %>
                <li class="page-item disabled">
                  <%== link.call(@pagy.next, pagy_t('pagy.nav.next')) %>
                </li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="content">
            <span class="display-desc">
              <p>
                <%= show_count_table(params[:page], @total_row_per_page, @total_questions) %>
              </p>
            </span>
            <%= render('components/flash_message')%>
            <div class="table">
              <table>
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>Pertanyaan</th>
                    <th>Status</th>
                    <th>Jumlah Like</th>
                    <th>Jumlah Report</th>
                    <th>Create At</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @questions.each_with_index do |question, index| %>
                  <tr>
                    <td class="number bold">
                      <%= ((params[:page].present? ? params[:page].to_i : 1) - 1) * Pagy::VARS[:items] + index+1 %>
                    </td>
                    <td class="name bold"><a href="<%= question_path(question['id']) %>">
                    <%= image_tag question['user']['avatar']['thumbnail_square']['url'] if question['user']['avatar']['thumbnail_square']['url'].present?  %>
                    <%= question['user']['full_name'] %>
                      </a></td>
                    <td><%= truncate(question['body'], :length => 80) %></td>
                    <td class="image">
                      <% if question['user']['verified'] %>
                      <img src="<%= asset_pack_path("views/assets/images/ic_status.svg") %>"/>
                      <% else %>
                      <img src="<%= asset_pack_path("views/assets/images/ic_status_nonactive.png") %>"/>
                      <% end %>
                    </td>
                    <td><%= question['like_count'] %></td>
                    <td><%= question['report_count'] %></td>
                    <td><%= Date.parse(question['created_at']) if question['created_at'].present? %></td>

                    <td>
                      <button class="dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false">
                        <img src="<%= asset_pack_path("views/assets/images/ic_action.svg") %>">
                      </button>
                      <div class="dropdown-menu" aria-labelledby="action">
                        <a class="dropdown-item" href="<%= question_path(question['id']) %>">Lihat</a>
                        <a class="dropdown-item" href="<%= edit_question_path(question['id']) %>">Edit</a>
                        <a class="dropdown-item" href="<%= question_path(question['id']) %>" data-method="delete" data-confirm="Are You Sure?">Hapus</a>
                      </div>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="filter">
              <a class="btn " data-toggle="collapse" href="#filter_list_pertanyaan" role="button" aria-expanded="false" aria-controls="collapseExample">
                <img src="<%= asset_pack_path("views/assets/images/ic_arrow-left.svg") %>">
                <img src="<%= asset_pack_path("views/assets/images/ic_filter.svg") %>">
              </a>
              <div id="filter_list_pertanyaan" class="collapse filter-form">
                <div class="card card-body">
                  <h4>Filter</h4>
                  <div class="form-wrap">
                    <label>Status</label>
                    <div class="form-group">
                      <%= select_tag(:verified, options_for_select([
                        ['', ''],
                        ['Verified True', 'user_verified_true'],
                        ['Verified False', 'user_verified_false'],
                        ['Verified All', 'user_verified_all']
                      ], params[:verified]), class: 'form-control') %>
                    </div>
                  </div>
                  <div class="form-wrap">
                    <label>User</label>
                    <div class="form-group">
                      <div class="form-group">
                        <%= text_field_tag :nama, params[:nama].present? ? params[:nama] : '', class: 'form-control', placeholder: 'Nama' %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="form-wrap">
                  <label>Pertanyaan</label>
                  <div class="form-group">
                    <div class="form-group">
                      <%= text_field_tag :question, params[:question].present? ? params[:question] : '', class: 'form-control', placeholder: 'Pertanyaan' %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </main>
  </div>
</div>
<%= render("components/footer") %>