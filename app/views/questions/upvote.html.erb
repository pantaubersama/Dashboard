<div class="pb-wrapper">
  <%= render("components/sidebar") %>
  <main class="main" role="main">
    <%= render "components/question/header", active: "all" %>
    <div class="main-content janji-politik">
      <div class="top">
        <div class="btn-back">
          <%= link_to questions_path do %>
          <img src="<%= asset_pack_path("views/assets/images/ic_back.svg") %>"> Back
          <% end %>
        </div>
      </div>
      <div class="content">
      <span class="display-desc">
      </span>
        <div class="bg-white detail-profile">
          <div class="card-form">
            <div class="row">
              <div class="col-md-6">
              <%= form_tag(action_upvote_question_path(@question['id']), method: :post) do %>
                <div class="form-wrap">
                  <label>Jumlah Upvote</label>
                  <div class="form-group">
                    <div class="form-group">
                      <input type="number" name="vote_count" min="1" required class="form-control">
                    </div>
                  </div>
                </div>
                <button type="submit" class="btn btn-solid-green">Upvote</button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
<%= render("components/footer") %>