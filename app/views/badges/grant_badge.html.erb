<div class="d-flex main-wrapper">
  <%= render("components/sidebar") %>
  <div class="main-wrapper">
    <main class="main col-md-10 offset-md-2" role="main">
      <header class="header" role="banner">
        <%= render("components/dropdown_profile") %>
      </header>
      <div class="main-content">
        <div class="top">
          <div class="btn-back">
            <%= link_to request.referer do %>
            <img src="<%= asset_pack_path("views/assets/images/ic_back.svg") %>"> Back
            <% end %>
          </div>
        </div>
        <div class="content">
          <span class="display-desc">
            <p>
              <!-- Displaying Content 1 - 30 of 500 in total -->
            </p>
          </span>
          <div class="bg-white detail-profile">
            <%= render("components/flash_message") %>
            <div class="card">
              <div class="card-form">
                <%= form_tag(grant_badge_badges_path, method: :post) do %>
                  <div class="form-wrap">
                    <label for="">Email</label>
                    <%= email_field :email, '', class: 'form-control', placeholder: 'Email User' %>
                  </div>
                  <div class="form-wrap">
                    <label for="">Badge</label>
                    <select name="badge_id"  class="form-control">
                      <% @badges.each do |badge| %>
                        <option value="<%= badge['id']%>"><%= badge['name'] %></option>
                      <% end %>
                    </select>
                  </div>
                  <br><br>
                  <button class="btn btn-solid-green" type="submit"> Grant</button>
                <% end %>
              </div>

            </div>
          </div>
        </div>
      </div>
  </div>
</div>
</main>
</div>
</div>
<%= render("components/footer") %>
